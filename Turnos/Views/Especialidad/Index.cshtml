
@model IEnumerable<Turnos.Models.Especialidad>


<h4>Especialidades</h4>
<p>
    <a asp-action="Create">Crear especialidad</a>
</p>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
        </tr>
    </thead>
    <tbody>
        @*Aqui colocamos mas adelante los registros de la db*@
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEspecialidad">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.IdEspecialidad">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>